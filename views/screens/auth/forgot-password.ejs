<div class="form-section">
    <h2 id="forgotPasswordTitle">Redefinir Senha</h2>
    <p id="forgotPasswordDescription" style="color: var(--text-secondary); text-align: center; margin-bottom: 25px;">Digite seu e-mail para enviarmos um link de recuperação.</p>
    <form id="forgotPasswordForm">
        <div class="form-group">
            <label for="email" id="labelEmail">E-mail</label>
            <input type="email" id="email" class="form-input" placeholder="seu@email.com" required>
        </div>
        <button type="submit" class="submit-btn" id="sendLinkButton">Enviar Link</button>
    </form>
    <div style="text-align: center; margin-top: 20px;">
        <a href="/" style="color: var(--primary-color); text-decoration: none; font-weight: bold;" id="backToLoginLink">Voltar para o Login</a>
    </div>
</div>

<script>
    document.getElementById('forgotPasswordForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        const email = document.getElementById('email').value;
        const button = e.target.querySelector('button');
        button.disabled = true;
        button.textContent = 'Enviando...';

        try {
            // Lógica de envio de e-mail (simulada)
            await new Promise(resolve => setTimeout(resolve, 1500));
            
            showMessage('Se um e-mail estiver cadastrado, um link de recuperação foi enviado.', 'success');
            setTimeout(() => window.location.href = '/', 3000);

        } catch (error) {
            showMessage(error.message || 'Ocorreu um erro. Tente novamente.', 'error');
        } finally {
            button.disabled = false;
            button.textContent = 'Enviar Link';
        }
    });
</script>